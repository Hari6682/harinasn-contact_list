<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="harinasn_contactlist.Views.MainPage"
             xmlns:vm="clr-namespace:harinasn_contactlist.Models.ViewModels"
             x:DataType="vm:ContactsListViewModel"
             Title="Add Contact">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Contact Form Fields -->
        <Entry Placeholder="Name" Text="{Binding Contact.Name}" />
        <Entry Placeholder="Email" Text="{Binding Contact.Email}" />
        <Entry Placeholder="Phone Number" Text="{Binding Contact.Phone}" />
        <Editor Placeholder="Description" Text="{Binding Contact.Description}" HeightRequest="100"/>
        <Button Text="Save Contact" Command="{Binding AddCommand}" />
        <Button Text="View Contacts" Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>

