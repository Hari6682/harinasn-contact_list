<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="harinasn_contactlist.Views.ContactsList"
             xmlns:vm="clr-namespace:harinasn_contactlist.Models.ViewModels"
             xmlns:models="clr-namespace:harinasn_contactlist.Models"
			 x:DataType="vm:ContactsListViewModel"
             Title="Contacts">
    <ListView x:Name="Lv" ItemsSource="{Binding Contacts}" ItemTapped="Lv_ItemTapped">
        <ListView.Header>
            <VerticalStackLayout BackgroundColor="Blue" Padding="5">
                <Label Text="Contacts" HorizontalOptions="Center" TextColor="AntiqueWhite" FontAttributes="Bold"/>
            </VerticalStackLayout>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="models:Contact">
                <TextCell Text="{Binding ID}" Detail="{Binding Name}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>

